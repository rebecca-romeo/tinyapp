<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if(user) { %>
      <!-- If user's logged in:
        - display username
        - display logout button
      -->
      <p>Logged in as: <%= user.email %></p>
      <form action="/logout" method="POST" >
          <label for="username"> </label>
          <button type="submit" class="btn btn-primary"> Logout</button>
      </form>

    <% } else { %>
      <!-- If user's not logged in:
        - login button
        - register button -->
        <a href="/login" class="btn btn-primary" style="margin-right: 10px">Login</a>
        <a href="/register" class="btn btn-primary";">Register</a>

    <% } %>

  </nav>
</header>